<h1><%= @pet.name %></h1>
<img src="<% @pet.image %>" alt="<% @pet.image %>">
<h2>Age: <%= @pet.approx_age %>, <%= @pet.sex %></h2>
<p><%= @pet.description %></p>
<h3><%= @pet.name %> is
<% if @pet.is_adoptable? %>
<%= @pet.adopt_status %>
<% else %>
<%= @pet.adopt_status %> adoption.
<% end %></h3>

<%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %>
<%= button_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>
