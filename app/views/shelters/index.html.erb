<h1>All Shelters</h1>
<p><%= link_to "Sort Alphabetically", "/shelters?sort=alpha" %> <br/>
<%= link_to "Sort by Number of Pets", "/shelters?sort=by_pets" %></p>

<% @shelters.each do |shelter|%>
  <h2><%= link_to shelter.name, "/shelters/#{shelter.id}" %></h2>
  <%= button_to "Edit #{shelter.name}", "/shelters/#{shelter.id}/edit", method: :get %>
  <%= button_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %>
<% end %>
<br/>
<%= button_to "New Shelter", "/shelters/new", method: :get %>
