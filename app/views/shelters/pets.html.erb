<h1><All Pets at <%= link_to @shelter.name, "/shelters/#{@shelter.id}" %></h1>
<br/>
<p>There are <%= @shelter.pets.number_pets %> pets at the shelter.</p>
<br/>
<% @adopt.each do |pet| %>
  <img src="<% pet.image %>" alt="<% pet.image %>">
  <p><%= link_to pet.name, "/pets/#{pet.id}" %>
  <%= pet.approx_age %>, <%= pet.sex %></p>
<% end %>
<% @pending.each do |pet| %>
  <img src="<% pet.image %>" alt="<% pet.image %>">
  <p><%= link_to pet.name, "/pets/#{pet.id}" %>
  <%= pet.approx_age %>, <%= pet.sex %></p>
<% end %>

<%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %>
