<% if @adoptable.nil? %>
  <h1>All Pets at <%= link_to @shelter.name, "/shelters/#{@shelter.id}" %></h1>
  <%= button_to "Show Only Adoptable Pets", "/shelters/#{@shelter.id}/pets?adoptable=true", method: :get %>
  <%= button_to "Show Only Pets Pending Adoption", "/shelters/#{@shelter.id}/pets?adoptable=false", method: :get %>
<% elsif @adoptable %>
  <h1>Adoptable Pets at <%= link_to @shelter.name, "/shelters/#{@shelter.id}" %></h1>
  <%= button_to "Show All Pets", "/shelters/#{@shelter.id}/pets", method: :get %>
  <%= button_to "Show Only Pets Pending Adoption", "/shelters/#{@shelter.id}/pets?adoptable=false", method: :get %>
<% else %>
  <h1>Pets Pending Adoption at <%= link_to @shelter.name, "/shelters/#{@shelter.id}" %></h1>
  <%= button_to "Show All Pets", "/shelters/#{@shelter.id}/pets", method: :get %>
  <%= button_to "Show Only Adoptable Pets", "/shelters/#{@shelter.id}/pets?adoptable=true", method: :get %>
<% end %>
<br/>
<p>There are <%= @shelter.pets.number_pets %> pets at the shelter.</p>
<br/>
<% if @adoptable || @adoptable.nil? %>
  <% @adopt.each do |pet| %>
    <img src="<% pet.image %>" alt="<% pet.image %>">
    <p><%= link_to pet.name, "/pets/#{pet.id}" %>
      <%= pet.approx_age %>, <%= pet.sex %></p>
  <% end %>
<% end %>
<% if !@adoptable %>
  <% @pending.each do |pet| %>
  <img src="<% pet.image %>" alt="<% pet.image %>">
  <p><%= link_to pet.name, "/pets/#{pet.id}" %>
  <%= pet.approx_age %>, <%= pet.sex %></p>
  <% end %>
<% end %>
<%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %>
